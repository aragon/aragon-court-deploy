{
  "name": "@aragon/court-deploy",
  "version": "1.0.0",
  "description": "Aragon Court deployment scripts",
  "author": "Aragon Association",
  "license": "GPL-3.0",
  "scripts": {
    "postinstall": "cd node_modules/@aragon/court && npm install && rm -rf build && npx truffle compile",
    "test": "./node_modules/@aragon/test-helpers/ganache-cli.sh",
    "deploy:dai:rpc": "node ./bin/index.js minime -n rpc -c ./test/data/config/dai.js",
    "deploy:anj:rpc": "node ./bin/index.js minime -n rpc -c ./data/config/anj.js",
    "deploy:court:rpc": "npm run deploy:dai:rpc && npm run deploy:anj:rpc && node ./bin/index.js court -n rpc"
  },
  "dependencies": {
    "@aragon/court": "aragon/aragon-court#development",
    "@aragon/minime": "^1.0.0",
    "@aragon/truffle-config-v5": "^1.0.0",
    "@truffle/config": "^1.1.21",
    "@truffle/contract": "^4.0.32",
    "chalk": "^2.4.2",
    "web3": "^1.2.1",
    "yargs": "^14.0.0"
  },
  "devDependencies": {
    "@aragon/test-helpers": "^2.1.0",
    "ganache-cli": "^6.4.5",
    "truffle": "^5.0.34"
  }
}
